@model IEnumerable<Movie>
<<div class="container" style="margin-top:100px">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Release Date</th>
                <th scope="col">Running Time</th>
                <th scope="col">Director</th>
                <th scope="col">Rating</th>
                <th scope="col">Description</th>
                <th scope="col">Video</th>
                <th scope="col">Image</th>
                <th scope="col">Trailer Image</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
          {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.ReleaseDate</td>
                    <td>@item.RunningTime</td>
                    <td>@item.Director</td>
                    <td>@item.Rating</td>
                    <td>@item.Description</td>
                    <td>@item.VideoUrl</td>
                    <td><img style="width: 100px; height: 100px" src="~/Images/home-page/images/@item.Image"></td>
                    <td><img style="width: 100px; height: 100px" src="~/Images/movie-detail/images/@item.TrailerImage"></td>
                    <td><a asp-controller="movie" asp-action="update" asp-route-id="@item.Id"><i class="fas fa-edit text text-primary"></i></a></td>
                    <td><a onclick="if (!confirm('Delete selected item?')){return false;}" asp-controller="movie" asp-action="delete" asp-route-id="@item.Id" class=" delete-item"><i class="fas fa-trash text text-danger"></i></a></td>
                </tr>
          }
        </tbody>
    </table>
    <div>
        <a asp-controller="movie" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%">
            <div style="width:100%;" class="btn btn-outline-success">Create Category</div>
        </a>
    </div>

</div>



}
