@model LoginViewModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/Css/admin-login.css">



    <header class="showcase">


        <div class="logo">
            <img src="https://i.ibb.co/r5krrdz/logo.png">
        </div>

        <div class="showcase-content">
            <div class="formm">
                <form method="post">
                    <h1>Sign In</h1>
                    <div class="info">
                        <input class="email" type="text" placeholder="Email"> <br>
                        <input class="email" type="password" placeholder="Password">
                    </div>
                    <div class="btn">
                        <button type="submit" class="btn-primary" type="submit">Sign In</button>
                    </div>
                    <div class="help">
                        <div>
                            <input value="true" type="checkbox"><label>Remember me</label>
                        </div>

                        <a href="https://www.netflix.com/dz-en/LoginHelp">Need Help ?</a>

                    </div>

                </form>

            </div>

        </div>

    </header>


<script src="~/Js/my-account.js"></script>
<script src="~/Js/toggle-password.js"></script>
