@model Slider


<h1>Create Category</h1>

<div class="container">
	<form form method="post" enctype="multipart/form-data" asp-controller="slider" asp-action="Create">
        <div class="form-group">
			<label asp-for="@Model.Title">Title:</label>
			<input type="text" class="form-control" asp-for="@Model.Title" />
			<span asp-validation-for="Title" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Writer">Writer:</label>
			<input type="text" class="form-control" asp-for="@Model.Writer" />
			<span asp-validation-for="Writer" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Country">Country:</label>
			<input type="text" class="form-control" asp-for="@Model.Country" />
			<span asp-validation-for=" Country" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Year">Year:</label>
			<input type="text" class="form-control" asp-for="@Model.Year" />
			<span asp-validation-for=" Year" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.MovieGenre">MovieGenre:</label>
			<input type="text" class="form-control" asp-for="@Model.MovieGenre" />
			<span asp-validation-for=" MovieGenre" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.File">Image:</label>
			<input type="file" class="form-control" asp-for="@Model.File" />
			<span asp-validation-for="File" class="text text-danger"></span>
		</div>
            @Html.AntiForgeryToken()
		<button style="background-color: #4CAF50; border: none;border-radius:10px;color: white;padding: 16px 32px;text-align: center;text-decoration: none;display: inline-block;font-size: 16px;margin: 4px 2px;transition-duration: 0.4s;cursor: pointer;margin-top:20px" type="submit">Create</button>
	</form>
</div>