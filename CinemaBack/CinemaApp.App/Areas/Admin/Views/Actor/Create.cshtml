@model Actor


<div class="container" style="margin-top: 100px">
    <h1>Create Actor</h1>

    <form method="post" enctype="multipart/form-data" asp-controller="Actor" asp-action="Create">
        <div class="form-group">
            <label asp-for="@Model.FullName">Fullname</label>
            <input type="text" class="form-control" asp-for="@Model.FullName" />
            <span asp-validation-for="FullName" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Role">Role</label>
            <input type="text" class="form-control" asp-for="@Model.Role" />
            <span asp-validation-for="Role" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.File">Image</label>
            <input type="file" class="form-control" asp-for="@Model.File" />
            <span asp-validation-for="File" class="text text-danger"></span>
        </div>
        <button type="submit" style="background-color: #4CAF50; border: none;border-radius:10px;color: white;padding: 16px 32px;text-align: center;text-decoration: none;display: inline-block;font-size: 16px;margin: 4px 2px;transition-duration: 0.4s;cursor: pointer;margin-top:20px" type="submit">Create</button>
    </form>
</div>
