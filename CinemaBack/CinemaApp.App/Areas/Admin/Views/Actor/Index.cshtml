@model IEnumerable<Actor>

<div class="container" style="margin-top:100px">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">FullName</th>
                <th scope="col">Role</th>
                <th scope="col">Image</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
          {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.FullName</th>
                    <th>@item.Role</th>
                     <td><img style="width: 100px; height: 100px" src="~/Images/movie-detail/images/@item.Image"></td>
                    <td><a asp-controller="actor" asp-action="update" asp-route-id="@item.Id"><i class="fas fa-edit text text-primary"></i></a></td>
                    <td><a onclick="if (!confirm('Delete selected item?')){return false;}" asp-controller="actor" asp-action="Delete" asp-route-id="@item.Id" class=" delete-item"><i class="fas fa-trash text text-danger"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="actor" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%">
            <div style="width:100%;" class="btn btn-outline-success">Create Category</div>
        </a>
    </div>

</div>



}

